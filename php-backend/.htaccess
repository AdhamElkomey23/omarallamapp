RewriteEngine On

# Enable CORS for all requests
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization"

# Handle preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Route API requests to appropriate PHP files
RewriteRule ^api/workers/?(.*)$ api/workers.php/$1 [L,QSA]
RewriteRule ^api/attendance/?(.*)$ api/attendance.php/$1 [L,QSA]
RewriteRule ^api/salary-deductions/?(.*)$ api/salary-deductions.php/$1 [L,QSA]
RewriteRule ^api/sales/?(.*)$ api/sales.php/$1 [L,QSA]
RewriteRule ^api/expenses/?(.*)$ api/expenses.php/$1 [L,QSA]
RewriteRule ^api/dashboard/?$ api/dashboard.php [L,QSA]

# Serve React app for all other requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]