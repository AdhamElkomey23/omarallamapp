{
  "name": "fertilizer-factory-management",
  "version": "1.0.0",
  "description": "نظام إدارة مصنع الأسمدة - شركة الواصلون للتعدين والصناعات الكيميائية",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "npm run build-win"
  },
  "author": "Al-Wasiloon for Mining and Chemical Industries",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "build": {
    "appId": "com.alwasiloon.fertilizer-factory-management",
    "productName": "نظام إدارة مصنع الأسمدة",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "shortcutName": "نظام إدارة مصنع الأسمدة"
    },
    "extraResources": [
      {
        "from": "renderer",
        "to": "renderer"
      }
    ]
  }
}